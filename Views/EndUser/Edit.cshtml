@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Test.ViewModels;
@model RegisterUserViewModelForEdit
<br /> <br />
<h2 class="text-center fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Edit Data into EndUser Tabel</h2>
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
<form asp-action="Edit" asp-controller="EndUser" asp-route-id="@Model.UserId" method="post" enctype="multipart/form-data">
    <div class="mb-3" asp-validation-summary="All"></div>
    <br />
                        <partial name="_EditPartial " model="Model"></partial>
                        <br /> 
                        <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" style="width: 370px;" type="submit" value="Create">Save</button>
                        </div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/Images/Home/adv1.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
<br /> <br />
<a asp-action="index" asp-controller="EndUser" class="btn btn-primary" style="position:relative; top:70px;">Back to list</a>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
}
@section AdvertiseSection
{
    <partial name="_advertisesSectionPartial"></partial>
}

