@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Test.ViewModels;
@model RegisterUserViewModel
<br /> <br />
                
<h2 class="text-center fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Insert Data into EndUser Tabel</h2>
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
<div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" asp-action="Create" asp-controller="EndUser" method="post"  enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
   <br />
    <partial name="_CreatePartial" model=Model></partial>
  <br /> <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" style="width: 370px;" type="submit" value="Create">Add EndUser</button>
                        </div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/Images/Home/adv1.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
<br /> <br />
<a asp-action="index" asp-controller="EndUser" class="btn btn-primary" style="position:relative; top:50px;">Back to list</a>
@section Scripts{
 <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
 <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
@section AdvertiseSection
{
    <partial name="_advertisesSectionPartial"></partial>
}

