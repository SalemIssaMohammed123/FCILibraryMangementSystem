@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Test.ViewModels
@model AuthorViewModel
<br /> <br />
<h2 class="text-center">Insert Data into Author Tabel</h2>
<form asp-action="Create" asp-controller="Author" method="post" enctype="multipart/form-data">
   <div  asp-validation-summary="All" class="text-danger"></div>
   <br />
    <partial name="_CreatePartial" model=Model></partial>
  <br />
  <button type="submit" value="Create" class="btn btn-primary">Submit</button>
</form>
<br /> <br />
<a asp-action="index" asp-controller="Author" class="btn btn-primary">Back to list</a>
@section Scripts{
 <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
 <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
@section AdvertiseSection
{
    <partial name="_advertisesSectionPartial"></partial>
}

