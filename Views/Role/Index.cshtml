@using Microsoft.AspNetCore.Identity;

@{
    ViewBag.Title = "Index";
}

<br />
<br />
@model List<IdentityRole>
<h2 class="text-center">Role List</h2>


<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Role Name
            </th>
            <th>
                <a asp-action="Create" asp-controller="Role" class="btn btn-secondary btn-sm mr-1"><i class="fa fa-plus"></i> Create</a>
            </th>
        </tr>
        
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Role" asp-route-name="@item.Name" class="btn btn-secondary btn-lg mr-1"><i class=" fa fa-trash"> Delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>