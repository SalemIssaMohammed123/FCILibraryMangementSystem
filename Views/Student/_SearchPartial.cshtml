<div class="table-responsive-sm">
    <table class="table table-hover table-light">
        <thead class="thead-dark">
            <tr>
                <th scope="col">StudentUserName</th>
                <th scope="col">StudentFirstName</th>
                <th scope="col">StudentLastName</th>
                <th scope="col">StudentAddress</th>
                <th scope="col">StudentImage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ApplicationUser user in (@List<ApplicationUser>)ViewData["paginatedList"])
            {
                <tr>
                    <td class="table-active">@user.UserName</td>
                    <td class="table-primary">@user.FirstName</td>
                    <td class="table-secondary">@user.LastName</td>
                    <td class="table-primary">@user.Address</td>
                    <td class="table-success"><img src="~/Images/Student/@user.ImageUrl" width="150" height="150" /></td>
                    @{
                        var parms = new Dictionary<string, string>
                {
                { "id", user.Id }
                };
                    }
                    <td>
                        <a asp-action="Edit" asp-controller="Student" asp-all-route-data="parms" class="btn btn-secondary btn-sm mr-1"><i class="fa fa-plus"></i>></a>
                        <a asp-action="Details" asp-controller="Student" asp-all-route-data="parms" class="btn btn-secondary btn-sm mr-1"><i class="fa fa-plus"></i>></a>
                        <a asp-action="Delete" asp-controller="Student" asp-all-route-data="parms" class="btn btn-secondary btn-sm mr-1"><i class="fa fa-plus"></i>></a>
                    </td>
                    @*There exist code we write untill we reach the identity  the links of users and the Student should
                maintain and the user outside the system the links excepected on one row
                *@
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Pagination controls using tag helpers -->
@if ((int)ViewData["TotalPages"] > 1)
{
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                {
                    <li class="page-item @(i == (int)ViewData["PageNumber"] ? "active" : "")">
                        <a class="page-link" asp-controller="Student" asp-action="Index">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}